<%-include("partials/header") -%>
<div class="country">
  <h1> <%= countryName %> </h1>
</div>
<div class="search-box">
  <form class="form-content" action="/" method="post">
    <input type="text" name="country" placeholder="Search">
    <button type="submit" name="button">Search</button>
  </form>
</div>

<div class="card-container">


<div class="card card-i">
  <h2 class="card-head">Infected</h2>
  <h3 class="card-count"><%= data.confirmed.value %> </h3>
<p class="card-para">
<%= data.lastUpdate.substring(0,10)  %>
  </p>
  <h4>No of active Cases of <br> Covid 19</h4>
</div>

<div class="card card-d">
  <h2 class="card-head">Recovered</h2>
  <h3 class="card-count"><%= data.recovered.value %></h3>
<p class="card-para">
  <%= data.lastUpdate.substring(0,10) %>
  </p>
  <h4>No of recoverd Cases of <br> Covid 19</h4>
</div>

<div class="card card-c">
  <h2 class="card-head">Deaths</h2>
  <h3 class="card-count"><%= data.deaths.value %></h3>
<p class="card-para">
  <%= data.lastUpdate.substring(0,10)  %>
  </p>
  <h4>No of death Cases of <br> Covid 19</h4>
</div>


</div>

<div class="graph">
<h1> Graph is comming Soon!</h1>
</div>

<%-  include("partials/footer") -%>
